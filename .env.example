# ----------------------------
# Project Genesis
# Demo-first template defaults
# ----------------------------

# Postgres configuration (Docker Compose service name is "db")
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=project_genesis
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Application settings
DEMO_MODE=true

# Demo-safe admin credentials (CHANGE FOR REAL DEPLOYMENTS)
ADMIN_PASSWORD=dev_admin_password_change_me
# JWT_SECRET must be at least 32 characters long in production
JWT_SECRET=dev_jwt_secret_change_me_long_random

# Database connection (inside Docker network)
DB_URL=postgresql+psycopg://postgres:postgres@db:5432/project_genesis

# Frontend (used later)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8010
